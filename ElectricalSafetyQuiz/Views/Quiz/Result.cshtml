@model List<ElectricalSafetyQuiz.Models.ResultViewModel>

@{
    ViewData["Title"] = "Результаты теста";
}

<h1>@ViewData["Title"]</h1>

<h3 class="mb-4">Ваш результат: @ViewData["Score"] из @ViewData["Total"]</h3>

@foreach (var result in Model)
{
    <div class="card mb-3 @(result.IsCorrect ? "border-success" : "border-danger")">
        <div class="card-header">
            @result.QuestionText
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Ваш ответ: @result.UserAnswerText</li>
            @if (!result.IsCorrect)
            {
                <li class="list-group-item">Правильный ответ: @result.CorrectAnswerText</li>
            }
        </ul>
    </div>
}

<a asp-controller="Quiz" asp-action="Start" class="btn btn-primary">Пройти тест еще раз</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На главную</a> 